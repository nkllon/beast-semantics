{
  "name": "beast-semantics",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "devDependencies": {
    "sparql-formatter": "1.0.2",
    "sparqljs": "3.7.3",
    "fast-check": "3.15.0",
    "semver": "7.6.3"
  },
  "scripts": {
    "check:sparql": "node tools/sparql_check.mjs queries",
    "generate:metadata": "python tools/generate_metadata.py",
    "test:js": "node --test tools/cc-sdd/*.test.mjs",
    "test:qa": "node --test tools/qa/*.test.mjs",
    "test:publishing": "node --test tools/publishing/*.test.mjs",
    "preflight": "node tools/preflight.mjs --fort-required --require-packages semver fast-check --require-reuse-index 7",
    "reuse:index": "node tools/reuse_index.mjs",
    "reuse:search": "npm run -s preflight && node tools/reuse_query.mjs --query",
    "reuse:evidence": "npm run -s preflight && node tools/reuse_evidence.mjs --query",
    "reuse:decide": "npm run -s preflight && node tools/reuse_decision.mjs --query",
    "reuse:setup": "node tools/setup_reuse_dirs.mjs"
  }
}

