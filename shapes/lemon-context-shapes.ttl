@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix lemon: <https://kg.lemon.ai/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

lemon-sh:RetrievalEventShape a sh:NodeShape ;
  sh:targetClass lemon:RetrievalEvent ;
  sh:property [ sh:path lemon:retrieved ; sh:minCount 1 ] .

lemon-sh:AnswerShape a sh:NodeShape ;
  sh:targetClass lemon:Answer ;
  sh:property [ sh:path lemon:faithfulnessScore ; sh:datatype xsd:decimal ; sh:minInclusive 0 ; sh:maxInclusive 1 ; sh:minCount 1 ] ;
  sh:property [ sh:path lemon:relevanceScore ; sh:datatype xsd:decimal ; sh:minInclusive 0 ; sh:maxInclusive 1 ; sh:minCount 1 ] ;
  sh:property [ sh:path lemon:groundedIn ; sh:minCount 1 ] .
