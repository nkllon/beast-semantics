@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix lemon: <https://kg.lemon.ai/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

lemon-sh:DiversityIndexShape a sh:NodeShape ;
  sh:targetClass lemon:DiversityIndex ;
  sh:property [ sh:path lemon:indexValue ; sh:datatype xsd:decimal ; sh:minCount 1 ] ;
  sh:property [ sh:path lemon:computedOver ; sh:minCount 1 ] .

lemon-sh:PerspectiveSetShape a sh:NodeShape ;
  sh:targetClass lemon:PerspectiveSet ;
  sh:property [ sh:path lemon:hasMember ; sh:minCount 2 ] .
