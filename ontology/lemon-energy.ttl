@prefix lemon: <https://kg.lemon.ai/> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

[] a owl:Ontology ;
   dcterms:title "Lemon Incentives & Energy Module" ;
   dcterms:description "Incentive structures, stakeholders, energy/resource flows and gradients." ;
   owl:versionInfo "0.1.0" .

# Classes
lemon:IncentiveStructure a owl:Class ; rdfs:label "Incentive Structure" .
lemon:Stakeholder a owl:Class ; rdfs:label "Stakeholder" ; rdfs:subClassOf lemon:Agent .
lemon:Resource a owl:Class ; rdfs:label "Resource" .
lemon:EnergyFlow a owl:Class ; rdfs:label "Energy Flow" ; rdfs:subClassOf prov:Entity .
lemon:EnergyGradient a owl:Class ; rdfs:label "Energy Gradient" ; rdfs:subClassOf prov:Entity .

# Object properties
lemon:from a owl:ObjectProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range lemon:Stakeholder ; rdfs:label "from" .
lemon:to a owl:ObjectProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range lemon:Stakeholder ; rdfs:label "to" .
lemon:resource a owl:ObjectProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range lemon:Resource ; rdfs:label "resource" .
lemon:followsGradientOf a owl:ObjectProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range lemon:EnergyGradient ; rdfs:label "follows gradient of" .
lemon:governedBy a owl:ObjectProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range lemon:IncentiveStructure ; rdfs:label "governed by" .

# Data properties
lemon:flowAmount a owl:DatatypeProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range xsd:decimal ; rdfs:label "flow amount" .
lemon:unit a owl:DatatypeProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range xsd:string ; rdfs:label "unit" .
lemon:hasCost a owl:DatatypeProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range xsd:decimal ; rdfs:label "cost" .
lemon:hasBenefit a owl:DatatypeProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range xsd:decimal ; rdfs:label "benefit" .
lemon:utility a owl:DatatypeProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range xsd:decimal ; rdfs:label "utility" .
lemon:externality a owl:DatatypeProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range xsd:decimal ; rdfs:label "externality" .
lemon:occurredAt a owl:DatatypeProperty ; rdfs:domain lemon:EnergyFlow ; rdfs:range xsd:dateTime ; rdfs:label "occurred at" .
