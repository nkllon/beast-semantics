@prefix words: <https://ns.nkllon.com/words/v1/> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix schema: <https://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

[] a owl:Ontology ;
   dcterms:title "Lemon Core Ontology" ;
   dcterms:description "Core classes and properties for agents, perspectives, claims, evidence, datasets, metrics, and activities." ;
   owl:versionInfo "0.1.0" .

# Classes
words:Agent a owl:Class ; rdfs:label "Agent" ; rdfs:comment "Actor that can perform activities and hold perspectives." .
words:MultiPerspectiveAgent a owl:Class ; rdfs:subClassOf words:Agent ; rdfs:label "Multi-Perspective Agent" .
words:Role a owl:Class ; rdfs:label "Role" .
words:Capability a owl:Class ; rdfs:label "Capability" .
words:Perspective a owl:Class ; rdfs:label "Perspective" ; rdfs:comment "A coherent viewpoint or lens used by an agent." .
words:Observation a owl:Class ; rdfs:label "Observation" .
words:Evidence a owl:Class ; rdfs:label "Evidence" ; rdfs:subClassOf prov:Entity .
words:Claim a owl:Class ; rdfs:label "Claim" ; rdfs:subClassOf prov:Entity .
words:Hypothesis a owl:Class ; rdfs:label "Hypothesis" ; rdfs:subClassOf prov:Entity .
words:Metric a owl:Class ; rdfs:label "Metric" ; rdfs:subClassOf prov:Entity .
words:Dataset a owl:Class ; rdfs:label "Dataset" ; rdfs:subClassOf dcat:Dataset .
words:Activity a owl:Class ; rdfs:label "Activity" ; rdfs:subClassOf prov:Activity .
words:Task a owl:Class ; rdfs:label "Task" ; rdfs:subClassOf words:Activity .

# Properties (object)
words:hasPerspective a owl:ObjectProperty ; rdfs:domain words:Agent ; rdfs:range words:Perspective ; rdfs:label "has perspective" .
words:participatesIn a owl:ObjectProperty ; rdfs:domain words:Agent ; rdfs:range words:Activity ; rdfs:label "participates in" .
words:supports a owl:ObjectProperty ; rdfs:domain words:Evidence ; rdfs:range words:Claim ; rdfs:label "supports" .
words:refutes a owl:ObjectProperty ; rdfs:domain words:Evidence ; rdfs:range words:Claim ; rdfs:label "refutes" .
words:usesDataset a owl:ObjectProperty ; rdfs:domain words:Activity ; rdfs:range words:Dataset ; rdfs:subPropertyOf prov:used ; rdfs:label "uses dataset" .
words:producedClaim a owl:ObjectProperty ; rdfs:domain words:Activity ; rdfs:range words:Claim ; rdfs:label "produced claim" .
words:producedEvidence a owl:ObjectProperty ; rdfs:domain words:Activity ; rdfs:range words:Evidence ; rdfs:label "produced evidence" .

# Properties (data)
words:confidence a owl:DatatypeProperty ; rdfs:domain words:Evidence ; rdfs:range xsd:decimal ; rdfs:label "confidence" .
words:uncertaintyModel a owl:DatatypeProperty ; rdfs:domain words:Evidence ; rdfs:range xsd:string ; rdfs:label "uncertainty model" .
words:createdAt a owl:DatatypeProperty ; rdfs:domain prov:Entity ; rdfs:range xsd:dateTime ; rdfs:label "created at" .

# Additional property for hypotheses
words:claims a owl:DatatypeProperty ; rdfs:domain words:Hypothesis ; rdfs:range xsd:string ; rdfs:label "claims" .
