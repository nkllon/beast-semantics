@prefix words: <https://ns.nkllon.com/words/v1/> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

[] a owl:Ontology ;
   dcterms:title "Lemon Diversity Module" ;
   dcterms:description "Perspective diversity model, indices, coverage, novelty, sets." ;
   owl:versionInfo "0.1.0" .

# Classes
words:DiversityIndex a owl:Class ; rdfs:subClassOf words:Metric ; rdfs:label "Diversity Index" .
words:PerspectiveSet a owl:Class ; rdfs:label "Perspective Set" .
words:Coverage a owl:Class ; rdfs:subClassOf words:Metric ; rdfs:label "Coverage" .
words:Novelty a owl:Class ; rdfs:subClassOf words:Metric ; rdfs:label "Novelty" .

# Properties
words:computedOver a owl:ObjectProperty ; rdfs:domain words:Metric ; rdfs:range words:PerspectiveSet ; rdfs:label "computed over" .
words:hasMember a owl:ObjectProperty ; rdfs:domain words:PerspectiveSet ; rdfs:range words:Perspective ; rdfs:label "has member" .
words:hasDimension a owl:ObjectProperty ; rdfs:domain words:Metric ; rdfs:range skos:Concept ; rdfs:label "has dimension" .
words:indexValue a owl:DatatypeProperty ; rdfs:domain words:DiversityIndex ; rdfs:range xsd:decimal ; rdfs:label "index value" .
words:coverageScore a owl:DatatypeProperty ; rdfs:domain words:Coverage ; rdfs:range xsd:decimal ; rdfs:label "coverage score" .
words:noveltyScore a owl:DatatypeProperty ; rdfs:domain words:Novelty ; rdfs:range xsd:decimal ; rdfs:label "novelty score" .
